

   <div id="post_show_content" class="skinny_wrapper wrapper_padding">
            <header>
                <p class="date"><%= @post.created_at.strftime('%A, %B %d') %></p>
                <h1><%= @post.title %></h1>
                <hr>
            </header>
            <div id="content">
            	<%= markdown @post.content %>
            </div>

            <% if user_signed_in? %>
            <div id="admin_links">
                <%= link_to "Edit Posts", edit_post_path(@post) %>
                <%= link_to "Delete Posts", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>
            </div>
            <% end %>

            <hr>

            <div id="share_box">
            	<p>Share The DO List</p>

            	<!-- Twitter -->
            	<a onclick="javascript:window.open('https://twitter.com/intent/tweet?text=<%= @post.title %> by @warrenkwchan - <%= url_for(post_url) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fab fa-twitter-square"></i></a>
            	<!-- Facebook -->
            	<a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for(post_url) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fab fa-facebook"></i></a>
            	<!-- Google Plus -->
            	<a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for(post_url) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fab fa-google-plus-square"></i></a>

            </div>

            <hr>

            <%= render 'disqus'%>
        </div>

        

