   <div id="post_show_content" class="skinny_wrapper wrapper_padding">
            <header>
                <p class="date"><%= @project.created_at.strftime('%A, %B %d') %></p>
                <h1><%= @project.title %></h1>
                <hr>
            </header>
            <div id="content">
            	
               <% if @project.image.present? %>
               <center> <%= image_tag @project.image.url(:medium) %>.   
                    <% if @project.image2.present? %>
                        <%= image_tag @project.image2.url(:medium) %>
                        <% end %>
                          <% if @project.image3.present? %>
                        <%= image_tag @project.image3.url(:medium) %> 
                        <% end %>
                </center>
                <% end %>

                <%= markdown @project.description %>
                 
                <div class="button_wrapper">
                 <% if @project.link.present? %>
                <a href="<%= @project.link %>" class="project_button" target="_blank">Visit <%= @project.title %></a>
                <% end %>
            </div>
            </div>

            <% if user_signed_in? %>
            <div id="admin_links">
                <%= link_to "Edit", edit_project_path(@project)%>
             <%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: "Are you sure?"}%>
            </div>
            <% end %>

            

            <hr>
            
        </div>